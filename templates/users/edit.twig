{% extends "layouts/admin.twig" %}

{% block title %} USUARIOS | EDIT {% endblock %}

{% block content %} 

<form class="m-5" action="{{ URL }}?controller=users&action=update" method="POST" method="POST">
	<table class="table">
	<thead>
		<tr>
		<th scope="col form-label"></th>
		<th scope="col form-label">Nombre</th>
		<th scope="col form-label">Apellidos</th>
		<th scope="col form-label">Email</th>
		<th scope="col form-label">Rol</th>
		<th scope="col form-label">Contrase√±a</th>
